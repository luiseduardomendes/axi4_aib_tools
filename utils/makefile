#-------------------------------------------------------------------------
# Description: makefile
#-----------------------------------------------------------------------------

export PROJ_DIR = /home/mendes/axi4_aib/aib-protocols

default: help

gen_cfg :
	python ${PROJ_DIR}/llink/script/llink_gen.py --cfg axi_mm_a32_d128.cfg 

#-----------------------------------------------------------------------------
# Help - display gmake option
#-----------------------------------------------------------------------------
help:
	@echo "=========================================================================================="
	@echo "                                       makefile options                                   "
	@echo "=========================================================================================="
	@echo "    	make gen_cfg  		- Generates Leader and Follower files"
	@echo "    	make clean  		- Remove all generated files"
	@echo " "

#-----------------------------------------------------------------------------
# Clean up
#-----------------------------------------------------------------------------

clean:
	rm -rf axi_mm
